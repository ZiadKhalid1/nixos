{

  "position": "top",
  "spacing": 10,
  "height": 39,
  "width": 1895,


  "modules-left": ["sway/workspaces",
        "sway/mode",
        "cpu",
        "memory",
        "temperature",
        "disk#one",
        "network",
        "custom/pacman"],


  "modules-center": ["custom/prayer"],

  "modules-right": ["tray",
        "custom/notification",
        "custom/audio_idle_inhibitor",
        "idle_inhibitor",
        "backlight",
        "sway/language",
        "custom/pomo",
        "battery",
        "pulseaudio",
        "clock"],


     "sway/workspaces": {
         "format": "{icon}"
     },


"sway/language": {
  "on-click": "swaymsg input type:keyboard xkb_switch_layout next"
},

"idle_inhibitor": {
	"format": "{icon}",
	"format-icons": {
		"activated": "ÔÅÆ",
		"deactivated": "ÔÅ∞"
	},
	"timeout": 30.5
},



  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>"
  },

   "cpu": {
        "states": {
          "good": 0,
          "warning": 70,
          "critical": 90
        },
        "interval": 1,
        "format": "ÔÇÖ {usage:2}%",
        "on-click": "foot btm"
      },

  "memory": {
    "states": {
      "good": 0,
      "warning": 70,
      "critical": 85
    },
    "interval": 5,
    "format": "Ôãõ {}%",
    "on-click": "foot btm"
     },

  "temperature": {
        "thermal-zone": 3,
        "interval" : 1,
        "hwmon-path": "/sys/class/hwmon/hwmon3/temp1_input",
        "critical-threshold": 80,

        "format": "{icon}&#8239;{temperatureC}¬∞C",
        "format-icons": ["Ôãâ", "Ôãâ", "Ôãâ"],
        "on-click": "foot -a 'flying-foot' --window-size-chars 82x25 watch sensors",
        "escape": true
    },
     "disk#one": {
		"states": {
			"good": 0,
			"warning": 70,
			"critical": 95
		},
		"interval": 5,
		"format": " ÔÇ† {percentage_used:2}% ",
		"path": "/"
	},

    "network": {

        "format-wifi": "Ôá´ &#8239;({signalStrength}%)",
        "format-ethernet": "&#8239;{ifname}: {ipaddr}/{cidr}",
        "format-linked": "&#8239;{ifname} (No IP)",
        "format-disconnected": "‚úà &#8239;Disconnected",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "{essid}: {ipaddr}"
    },

  "tray": {
    "spacing": 10,
    "icon-size": 15
  },

  "custom/pacman": {
	"format": "{}  ÔÜá",
	"interval": 3600,
	"exec": "checkupdates | wc -l",
	"exec-if": "exit 0",
	"on-click": "foot -a 'flying-foot' --window-size-chars 82x25 paru -Syu ; pkill -SIGRTMIN+8 waybar",
	"signal": 8
  },

  "clock": {




  "format": "ÔÄó  {:%I:%M}",
	"format-alt": "{:%A, %B %d, %Y (%R)} ÔóØ ",
	"tooltip-format": "<span size='9pt' font='Fira Mono'>{calendar}</span>",
	"calendar": {
		"mode"          : "year",
		"mode-mon-col"  : 3,
		"weeks-pos"     : "right",
		"on-scroll"     : 1,
		"on-click-right": "mode",
		"format": {
			"months":     "<span color='#ffead3'><b>{}</b></span>",
			"days":       "<span color='#ecc6d9'><b>{}</b></span>",
			"weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
			"weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
			"today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
		}
	},
	"actions": {
		"on-click-right": "mode",
		"on-click-forward": "tz_up",
		"on-click-backward": "tz_down",
		"on-scroll-up": "shift_up",
		"on-scroll-down": "shift_down"
  	}
  },




  "battery": {
    "states": {
      "good": 60,
      "warning": 40,
      "critical": 30
    },
    "format": "{icon}  {capacity}%",
    "format-charging": "Ôá¶ {capacity}%",
    "format-plugged": "Ôá¶ {capacity}%",
    "format-full": "Ôí° full charged",
    "format-warning": "ÔÅ± {capacity}%",
    "format-critical": "Ó™á {capacity}%",
    "format-alt": "{time} {icon}",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
  },


  "custom/notification": {
        "tooltip": false,
        "format": " {} {icon} ",
        "format-icons": {
          "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
          "none": "ÔÇ¢",
          "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
          "dnd-none": "Ôá∑",
          "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
          "inhibited-none": "ÔÇ¢",
          "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
          "dnd-inhibited-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
      },

  "custom/audio_idle_inhibitor": {
		"format": "{icon}",
		"exec": "sway-audio-idle-inhibit --dry-print-both-waybar",
		"exec-if": "which sway-audio-idle-inhibit",
		"return-type": "json",
		"format-icons": {
			"output": "ÔÖÑ",
			"input": "ÔÑ∞",
			"output-input": "ÔÖÑ  ÔÑ∞",
			"none": ""
		}
	},


	"backlight": {

        "format": "{icon}&#8239;{percent}%",
        "format-icons": ["üîÖ", "üîÜ"],
        "on-scroll-down": "brightnessctl -c backlight set 1%-",
        "on-scroll-up": "brightnessctl -c backlight set +1%"
    },
    "pulseaudio": {

      "format": "{icon} {volume}% {format_source}",
      "format-bluetooth": "{icon}Ôäî {volume}% {format_source}",
      "format-bluetooth-muted": "Ôë¶ {format_source}",
      "format-muted": "Ôë¶  {format_source}",
      "format-source": "ÔÑ∞ {volume}%",
      "format-source-muted": "ÔÑ±",
      "format-icons": {
        "headphone": "ÔÄ•",
        "hands-free": "Ôñê",
        "headset": "üéß",
        "phone": "ÔÇï",
        "portable": "ÔÇï",
        "car": "ÔÜπ",
        "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
      },
      "on-click": "pavucontrol"
    },

    "custom/prayer": {
      "exec": " prayer-times ",
      "interval": 30,
      "tooltip": true ,
      "tooltip-format": "{}",
      "format": "üïå {}"
    },
    "custom/weather": {
       "format": "{}¬∞",
       "tooltip": true,
       "interval": 3600,
       "exec": "wttrbar --location Asyut",
       "return-type": "json"
},

 "keyboard-state": {
	"numlock": true,
	"capslock": true,
	"format": "{name} {icon}",
	"format-icons": {
		"locked": "ÔÄ£",
		"unlocked": "ÔÇú"
	}
},

"mpris": {
	"format": "{player_icon} {dynamic}",
	"format-paused": "{status_icon} <i>{dynamic}</i>",
	"player-icons": {
		"default": "‚ñ∂",
		"mpv": "üéµ"
	},
	"status-icons": {
		"paused": "‚è∏"
	}

},

"custom/pomo": {
    "format": " ÓÄÅ  {}",
    "exec": "pomodoro-cli status --format json --time-format digital",
    "return-type": "json",
    "on-click": "pomodoro-cli start --add 5m --notify",
    "on-click-middle": "pomodoro-cli pause",
    "on-click-right": "pomodoro-cli stop",
    "interval": 1
}



}
